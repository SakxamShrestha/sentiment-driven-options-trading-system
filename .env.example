# ============================================
# TradeSent.AI - Environment Template
# ============================================

# ============================================
# Alpaca API Credentials
# ============================================
# Get your API keys from: https://alpaca.markets/
# Start with PAPER TRADING for testing!
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets
# Alpaca News WebSocket (sandbox vs production)
ALPACA_STREAM_NEWS_URL=wss://stream.data.sandbox.alpaca.markets/v1beta1/news

# ============================================
# LunarCrush API (social sentiment / buzz)
# ============================================
# Get your API key from: https://lunarcrush.com/developers
LUNARCRUSH_API_KEY=your_lunarcrush_api_key_here

# ============================================
# Twitter/X API Credentials (optional)
# ============================================
# Get your API keys from: https://developer.twitter.com/
# You need Twitter API v2 access
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# ============================================
# Reddit API Credentials
# ============================================
# Create an app at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=StockTracker/1.0

# ============================================
# Groq API (optional - for Llama 3)
# ============================================
# Get your API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# ============================================
# Anthropic API (optional - for advanced NLP)
# ============================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================
# Data Layer
# ============================================
# Redis: live state and circuit breaker
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# SQLite: trade history and sentiment metadata (optional; default: data/tradesent.db)
# SQLITE_DB_PATH=

# ============================================
# Trading Configuration
# ============================================
# Default ticker symbol (SPY = S&P 500 ETF)
DEFAULT_TICKER=SPY

# Options expiration type (0DTE = same-day expiration)
OPTIONS_EXPIRATION_TYPE=0DTE

# Maximum position size per trade (in dollars)
MAX_POSITION_SIZE=1000

# Maximum number of trades per day
MAX_DAILY_TRADES=10

# ⚠️ IMPORTANT: Set to 'true' ONLY after extensive testing!
# Keep as 'false' during development and testing
ENABLE_LIVE_TRADING=false

# ============================================
# Performance Targets
# ============================================
# Target latency from news ingestion to trade execution (milliseconds)
TARGET_LATENCY_MS=200

# Sentiment thresholds for trading signals
# Bullish: sentiment score above this triggers buy signal
SENTIMENT_THRESHOLD_BULLISH=0.6

# Bearish: sentiment score below this triggers sell signal
SENTIMENT_THRESHOLD_BEARISH=-0.6

# Minimum confidence score required to execute a trade
MIN_CONFIDENCE_SCORE=0.7

# ============================================
# Flask Configuration
# ============================================
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=dev-secret-key-change-in-production

# ============================================
# Monitoring & Logging
# ============================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable performance metrics collection
METRICS_ENABLED=true